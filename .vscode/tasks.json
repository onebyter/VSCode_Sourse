{
    "options": {
        "env": {
            "Path": "D:\\MinGW\\mingw64\\bin;${env:Path}"
        },
        "shell": {
            "args": [
                "/C"
            ],
            "executable": "C:\\Windows\\System32\\cmd.exe"
        }
    },
    "tasks": [
        {
            "args": [
                "-std=c++23",
                "-fexec-charset=GBK",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "command": "D:\\MinGW\\mingw64\\bin\\g++.exe",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "label": "gcc single file build",
            "presentation": {
                "clear": true,
                "echo": false,
                "focus": false,
                "panel": "shared",
                "reveal": "silent",
                "showReuseMessage": false
            },
            "problemMatcher": "$gcc",
            "type": "process"
        },
        {
            "args": [
                "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
                "-ExecutionPolicy",
                "ByPass",
                "-NoProfile",
                "-File",
                "D:\\MinGW\\mingw64\\bin\\pause-console.ps1",
                {
                    "quoting": "weak",
                    "value": "${fileDirname}\\${fileBasenameNoExtension}.exe"
                }
            ],
            "command": "START",
            "dependsOn": "gcc single file build",
            "label": "run and pause",
            "presentation": {
                "clear": true,
                "echo": false,
                "focus": false,
                "panel": "shared",
                "reveal": "never",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "type": "shell"
        },
        {
            "args": [
                "-ExecutionPolicy",
                "ByPass",
                "-NoProfile",
                "-File",
                "D:\\MinGW\\mingw64\\bin\\check-ascii.ps1",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "command": "C:\\Windows\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
            "dependsOn": "gcc single file build",
            "label": "check ascii",
            "presentation": {
                "clear": true,
                "echo": false,
                "focus": false,
                "panel": "shared",
                "reveal": "never",
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "type": "process"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cpp.exe 生成活动文件",
            "command": "D:\\MinGW\\mingw64\\bin\\cpp.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}